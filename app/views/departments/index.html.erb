<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<table class="dt table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Staff</th>
      <th>Product</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.description %></td>
        <td><%= department.staffs.count %></td>
        <td><%= department.products.count %></td>
        <td><%= link_to 'Show', department %>
        <%= link_to 'Edit', edit_department_path(department) %>
        <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

